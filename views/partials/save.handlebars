<div class="save-backdrop" style="display: none" id="save-modal">
    <div class="save-modal ui-shadow">
        <div class="toolbar-title">
            Save Project
        </div>
        <div class="save-modal-content">
            <label for="project-name">Project Name</label>
            <input id="save-name-input" name="project-name" type="text" placeholder="My Design" value="{{ name }}">
            <div class="save-modal-actions">
                <button id="save-cancel-button" class="pill-button-sm">
                    Cancel
                </button>
                <div style="flex: 1"></div>
                <button id="save-commit-button" class="pill-button-sm save-modal-save">
                    Save
                </button>
            </div>

        </div>


    </div>
</div>